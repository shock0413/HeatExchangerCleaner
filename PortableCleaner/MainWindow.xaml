<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                  x:Class="PortableCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PortableCleaner"
        mc:Ignorable="d"
        Title="Portable Auto Cleaner" Height="800" Width="1024" WindowState="Maximized" Icon="Resources/logo2.png" Closing="MetroWindow_Closing">
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button.Square}">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>
        <Style TargetType="GroupBox" BasedOn="{StaticResource MahApps.Styles.GroupBox}">
            <Setter Property="Margin" Value="5"/>

        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <mah:ToggleSwitch HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="1" IsOn="{Binding IsControllSystem}">
            <TextBlock Text="제어권"/>
        </mah:ToggleSwitch>
        <TabControl Grid.Row="1">

            <TabItem Header="신호">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="PLC→PC" mah:HeaderedControlHelper.HeaderFontSize="15">
                        <ScrollViewer>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="0" Text="HB : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="1" Text="노즐 1 전진단 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="2" Text="노즐 2 전진단 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="3" Text="노즐 3 전진단 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="4" Text="노즐 1 후진단 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="5" Text="노즐 2 후진단 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="6" Text="노즐 3 후진단 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="7" Text="펌프 ON : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="8" Text="비상 정지 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="9" Text="이동 완료 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="10" Text="세척 완료 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="11" Text="세척 상태 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="12" Text="X축 위치 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="13" Text="Y축 위치 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="14" Text="X 리미트 에러 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="15" Text="Z 리미트 에러 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="16" Text="노즐 확인 에러 : "/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="17" Text=""/>
                            <TextBlock HorizontalAlignment="Right" Grid.Row="18" Text=""/>
                            

                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Input_HB}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Input_Nozle1Forword}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Input_Nozle2Forword}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Input_Nozle3Forword}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Input_Nozle1Backword}"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Input_Nozle2Backword}"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Input_Nozle3Backword}"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Input_PumpOn}"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding Input_Emergency}"/>
                            <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding Input_MoveReady}"/>
                            <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding Input_CleaningFinish}"/>
                            <TextBlock Grid.Row="11" Grid.Column="1" Text="{Binding Input_CleaningState}"/>
                            <TextBlock Grid.Row="12" Grid.Column="1" Text="{Binding Input_XPos}"/>
                            <TextBlock Grid.Row="13" Grid.Column="1" Text="{Binding Input_ZPos}"/>
                            <TextBlock Grid.Row="14" Grid.Column="1" Text="{Binding Input_XLimitError}"/>
                            <TextBlock Grid.Row="15" Grid.Column="1" Text="{Binding Input_ZLimitError}"/>
                            <TextBlock Grid.Row="16" Grid.Column="1" Text="{Binding Input_NozleCheckError}"/>
                            <TextBlock Grid.Row="17" Grid.Column="1" Text=""/>
                            <TextBlock Grid.Row="18" Grid.Column="1" Text=""/>
                        </Grid>
                        </ScrollViewer>
                    </GroupBox>

                    <GroupBox Header="PC→PLC" mah:HeaderedControlHelper.HeaderFontSize="15" Grid.Column="1">
                        <ScrollViewer>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock HorizontalAlignment="Right"  Grid.Row="0" Text="HB : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="1" Text="X 목표 위치 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="2" Text="Z 목표 위치 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="3" Text="이동 시작 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="4" Text="펌프 ON : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="5" Text="세척 시작 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="6" Text="노즐 선택 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="7" Text="노즐 전진 리미트 시간 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="8" Text="노즐 후진 리미트 시간 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="9" Text="우측 이동 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="10" Text="좌측 이동 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="11" Text="하단 이동 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="12" Text="상단 이동 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="13" Text="X축 조그 속도 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="14" Text="Z축 조그 속도 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="15" Text="X축 이동 속도 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="16" Text="Z축 이동 속도 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="17" Text="원점 설정 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="18" Text="알람 리셋 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="19" Text="노즐 전진 : "/>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="20" Text="노즐 후진 : "/>

                                <TextBlock HorizontalAlignment="Right" Grid.Row="21" Text="노즐 인터락 해제 : "/>

                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Output_HB}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Output_XDesPos}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Output_ZDesPos}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Output_StartMove }"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Output_PumpOn}"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Output_StartCleaning}"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Output_NozleSelect}"/>
                                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Output_NozleForwordLimit}"/>
                                <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding Output_NozleBackwordLimit}"/>
                                <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding Output_MoveRight}"/>
                                <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding Output_MoveLeft}"/>
                                <TextBlock Grid.Row="11" Grid.Column="1" Text="{Binding Output_MoveDown}"/>
                                <TextBlock Grid.Row="12" Grid.Column="1" Text="{Binding Output_MoveUp}"/>
                                <TextBlock Grid.Row="13" Grid.Column="1" Text="{Binding Output_XJogSpeed}"/>
                                <TextBlock Grid.Row="14" Grid.Column="1" Text="{Binding Output_ZJogSpeed}"/>
                                <TextBlock Grid.Row="15" Grid.Column="1" Text="{Binding Output_XMoveSpeed}"/>
                                <TextBlock Grid.Row="16" Grid.Column="1" Text="{Binding Output_ZMoveSpeed}"/>
                                <TextBlock Grid.Row="17" Grid.Column="1" Text="{Binding Output_SetOrigin}"/>
                                <TextBlock Grid.Row="18" Grid.Column="1" Text="{Binding Output_AlramReset}"/>
                                <TextBlock Grid.Row="19" Grid.Column="1" Text="{Binding Output_NozleForword}"/>
                                <TextBlock Grid.Row="20" Grid.Column="1" Text="{Binding Output_NozleBackword}"/>

                                <TextBlock Grid.Row="21" Grid.Column="1" Text="{Binding Output_FreeMove}"/>

                        </Grid>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="이동 리미트">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock HorizontalAlignment="Right" Text="좌측 X Limit" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock HorizontalAlignment="Right" Text="우측 X Limit" Grid.Row="1" Grid.Column="0"/>

                    <TextBlock HorizontalAlignment="Right" Text="상단 Z Limit" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock HorizontalAlignment="Right" Text="하단 Z Limit" Grid.Row="3" Grid.Column="0"/>

                    <TextBox Text="{Binding XMinLimit}" Grid.Row="0" Grid.Column="1"/>
                    <TextBox Text="{Binding XMaxLimit}" Grid.Row="1" Grid.Column="1"/>
                    <TextBox Text="{Binding ZMinLimit}" Grid.Row="2" Grid.Column="1"/>
                    <TextBox Text="{Binding ZMaxLimit}" Grid.Row="3" Grid.Column="1"/>

                </Grid>
            </TabItem>
            <TabItem Header="수동 조작">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.ColumnSpan="2" Name="btn_SetOrigin">
                        <TextBlock Text="원점 설정"/>
                    </Button>
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Name="btn_Emg">
                            <TextBlock Text="{Binding btn_Emg_Text}"/>
                        </Button>
                        <Button Grid.Column="1" Name="btn_ArmReset">
                            <TextBlock Text="이상해제"/>
                        </Button>
                    </Grid>
                    <GroupBox Header="X축" Grid.Column="0" Grid.Row="1" mah:HeaderedControlHelper.HeaderFontSize="15">
                        <Grid>
                            <Grid.RowDefinitions>

                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Row="0" Grid.ColumnSpan="2" Name="btn_XHome">
                                <TextBlock Text="X축 HOME"/>
                            </Button>
                            <Button Grid.Row="1" Grid.Column="0" Name="btn_JogLeft">
                                <TextBlock Text="조그 좌측"/>
                            </Button>
                            <Button Grid.Row="1" Grid.Column="1"  Name="btn_JogRight">
                                <TextBlock Text="조그 우측"/>
                            </Button>
                            <Grid Grid.ColumnSpan="2" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <GroupBox Header="X 위치"  mah:HeaderedControlHelper.HeaderFontSize="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Text="현재 X 위치 : " HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" TextAlignment="Right" Text="{Binding CurrentMotorX}"/>
                                        <TextBlock Grid.Row="1" Text="새로운 X 위치 : " HorizontalAlignment="Right"/>
                                        <mah:NumericUpDown Grid.Row="1" Grid.Column="1" Interval="0.01" Value="{Binding XDestination}"/>
                                        <Button Grid.Row="2" Grid.ColumnSpan="2" Name="btn_MoveX">
                                            <TextBlock Text="이동" />
                                        </Button>
                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="X 조그 속도" Grid.Row="1"  mah:HeaderedControlHelper.HeaderFontSize="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <mah:NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding XJogSpeed}"/>
                                        <Button Grid.Row="1" Grid.ColumnSpan="2"  Name="btn_SetJogXSpeed">
                                            <TextBlock Text="설정" />
                                        </Button>
                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="X 운송 속도" Grid.Row="2"  mah:HeaderedControlHelper.HeaderFontSize="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <mah:NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding XMoveSpeed}"/>
                                        <Button Grid.Row="1" Grid.ColumnSpan="2"  Name="btn_SetMoveXSpeed">
                                            <TextBlock Text="설정" />
                                        </Button>
                                    </Grid>
                                </GroupBox>


                            </Grid>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Z축" Grid.Column="1" Grid.Row="1"  mah:HeaderedControlHelper.HeaderFontSize="15">
                        <Grid>
                            <Grid.RowDefinitions>

                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Row="0" Grid.ColumnSpan="2" Name="btn_ZHome">
                                <TextBlock Text="Z축 HOME"/>
                            </Button>
                            <Button Grid.Row="1" Grid.Column="0"  Name="btn_JogUP">
                                <TextBlock Text="조그 상승"/>
                            </Button>
                            <Button Grid.Row="1" Grid.Column="1"  Name="btn_JogDown" >
                                <TextBlock Text="조그 하강"/>
                            </Button>
                            <Grid Grid.ColumnSpan="2" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <GroupBox Header="Z 위치"  mah:HeaderedControlHelper.HeaderFontSize="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Text="현재 Z 위치 : " HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Row="0" Text="{Binding CurrentMotorZ}" TextAlignment="Right" Grid.Column="1"/>
                                        <TextBlock Grid.Row="1" Text="새로운 Z 위치 : " HorizontalAlignment="Right"/>
                                        <mah:NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding ZDestination}"/>
                                        <Button Grid.Row="2" Grid.ColumnSpan="2" Name="btn_MoveZ">
                                            <TextBlock Text="이동" />
                                        </Button>
                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="Z 조그 속도" Grid.Row="1"  mah:HeaderedControlHelper.HeaderFontSize="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <mah:NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding ZJogSpeed}"/>
                                        <Button Grid.Row="1" Grid.ColumnSpan="2" Name="btn_SetJogZSpeed">
                                            <TextBlock Text="설정" />
                                        </Button>
                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="Z 운송 속도" Grid.Row="2"  mah:HeaderedControlHelper.HeaderFontSize="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <mah:NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding ZMoveSpeed}"/>
                                        <Button Grid.Row="1" Grid.ColumnSpan="2"  Name="btn_SetMoveZSpeed">
                                            <TextBlock Text="설정" />
                                        </Button>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="노즐 전진 센서 상태" Grid.Column="0" Grid.Row="2"  mah:HeaderedControlHelper.HeaderFontSize="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Grid.Column="0" HorizontalAlignment="Center" Fill="{Binding Nozle1ForwordLEDColor}" Width="30" Height="30"/>
                            <Ellipse Grid.Column="1" HorizontalAlignment="Center" Fill="{Binding Nozle2ForwordLEDColor}" Width="30" Height="30"/>
                            <Ellipse Grid.Column="2" HorizontalAlignment="Center" Fill="{Binding Nozle3ForwordLEDColor}" Width="30" Height="30"/>
                        </Grid>

                    </GroupBox>

                    <GroupBox Header="노즐 후진 센서 상태" Grid.Column="1" Grid.Row="2"  mah:HeaderedControlHelper.HeaderFontSize="15"> 
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Grid.Column="0" HorizontalAlignment="Center" Fill="{Binding Nozle1BackwordLEDColor}" Width="30" Height="30"/>
                            <Ellipse Grid.Column="1" HorizontalAlignment="Center" Fill="{Binding Nozle2BackwordLEDColor}" Width="30" Height="30"/>
                            <Ellipse Grid.Column="2" HorizontalAlignment="Center" Fill="{Binding Nozle3BackwordLEDColor}" Width="30" Height="30"/>
                        </Grid>

                    </GroupBox>

                    <Grid Grid.Column="3" Grid.Row="1" Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <GroupBox  Header="노즐 설정" mah:HeaderedControlHelper.HeaderFontSize="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>

                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="Btn_NozleCleaningStart">
                                    <TextBlock Text="세척 시작"/>
                                </Button>

                                <Button Grid.Row="1" Grid.Column="0" Command="{Binding NozleOnCommand}">
                                    <TextBlock Text="노즐 사용 ON"/>
                                </Button>
                                <Button Grid.Row="1" Grid.Column="1" Command="{Binding NozleOffCommand}">
                                    <TextBlock Text="노즐 사용 OFF"/>
                                </Button>
                                <Button Grid.Row="2" Grid.Column="0" Name="Btn_NozelForword">
                                    <TextBlock Text="노즐 전진"/>
                                </Button>
                                <Button Grid.Row="2" Grid.Column="1" Name="Btn_NozelBackword">
                                    <TextBlock Text="노즐 후진"/>
                                </Button>


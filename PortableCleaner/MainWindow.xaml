                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <GroupBox Grid.Row="0" Header="이미지">
                                <Image Source="{Binding InspectionInfo.HoleSettingImage}"/>
                            </GroupBox>
                            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                                <Button Width="100" Command="{Binding AutoModeRemoveHoleCommand}">
                                    <TextBlock Text="제거"/>
                                </Button>
                            </StackPanel>
                            <TabControl Grid.Row="2">
                                <TabItem Header="홀 기준">
                                    <DataGrid ItemsSource="{Binding InspectionInfo.Holes}" SelectedItem="{Binding SelectedAutoModeHole}" AutoGenerateColumns="True" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False">
                                        <DataGrid.Columns>

                                        </DataGrid.Columns>
                                    </DataGrid>
                                </TabItem>
                                <TabItem Header="작업 기준">
                                    <DataGrid>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="번호"/>
                                            <DataGridTextColumn Header="그룹 번호"/>
                                            <DataGridTextColumn Header="센터1"/>
                                            <DataGridTextColumn Header="센터2"/>
                                            <DataGridTextColumn Header="홀1 번호"/>
                                            <DataGridTextColumn Header="홀2 번호"/>
                                            <DataGridTextColumn Header="홀3 번호"/>
                                            <DataGridTextColumn Header="홀1 X"/>
                                            <DataGridTextColumn Header="홀1 Y"/>
                                            <DataGridTextColumn Header="홀2 X"/>
                                            <DataGridTextColumn Header="홀2 Y"/>
                                            <DataGridTextColumn Header="홀3 X"/>
                                            <DataGridTextColumn Header="홀3 Y"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </TabItem>
                            </TabControl>

                            <Button Grid.Row="3" Command="{Binding ConfirmHoleSettingCommand}">
                                <TextBlock Text="완료"/>
                            </Button>
                        </Grid>
                    </TabItem>
                    <TabItem Header="5. 세척 진행">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <ProgressBar Grid.Row="0" Maximum="{Binding InspectionInfo.CleaningMaxCount}" Value="{Binding InspectionInfo.CleaningCount}"/>
                            <TextBlock Grid.Row="0" Text="{Binding InspectionInfo.CleaningPerStr}" TextAlignment="Center" VerticalAlignment="Center"/>
                            <Grid HorizontalAlignment="Center" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" IsEnabled="False">
                                    <TextBlock Text="위치 이동"/>
                                </Button>
                                <Button Grid.Column="1" Command="{Binding SkipOneHoleCommand}">
                                    <TextBlock Text="건너뛰기" IsEnabled="False"/>
                                </Button>
                                <mah:ToggleSwitch Grid.Column="2" IsOn="{Binding IsPauseCleaning}">
                                    <TextBlock Text="일시정지" IsEnabled="False"/>
                                </mah:ToggleSwitch>
                                <Button Grid.Column="3" Command="{Binding StopCleaningCommand}">
                                    <TextBlock Text="중지"/>
                                </Button>
                            </Grid>
                            <GroupBox Header="세척 현황"  Grid.Row="2" Background="Black">
                                <Image Source="{Binding InspectionInfo.CleaningImage}"/>
                            </GroupBox>
                        </Grid>
                    </TabItem>
                    <TabItem Header="6. 세척 결과">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" HorizontalAlignment="Right" Text="번들 명 : "/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding InspectionInfo.BundleName}" HorizontalAlignment="Left"/>


                            <TextBlock Grid.Row="1" HorizontalAlignment="Right" Text="세척 시작 일시 : " />
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding InspectionInfo.CleaningStartDateTimeStr}" HorizontalAlignment="Left"/>


                            <TextBlock Grid.Row="2" HorizontalAlignment="Right" Text="세척 종료 일시 : " />
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding InspectionInfo.CleaningEndDateTimeStr}" HorizontalAlignment="Left"/>


                            <TextBlock Grid.Row="3" HorizontalAlignment="Right" Text="세척 소요 시간 : " />
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding InspectionInfo.CleaningTimeStr}" HorizontalAlignment="Left"/>

                            <TextBlock Grid.Row="4" HorizontalAlignment="Right" Text="총 세척 홀 수 : " />
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding InspectionInfo.CleaningHoleCount}" HorizontalAlignment="Left"/>

                            <TextBlock Grid.Row="5" HorizontalAlignment="Right" Text="세척 홀 수 : "/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding InspectionInfo.CleaningOkHoleCount}" HorizontalAlignment="Left"/>

                            <TextBlock Grid.Row="6" HorizontalAlignment="Right" Text="미세척 홀 수 : "/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding InspectionInfo.CleaningNGHoleCount}" HorizontalAlignment="Left"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>

            <TabItem Header="에러 리스트">

                <DataGrid Margin="5" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding ErrorList}" GridLinesVisibility="All">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="이상 내역" Binding="{Binding Title}" Width="Auto"/>
                        <DataGridTextColumn Header="설명" Binding="{Binding Content}" Width="Auto"/>
                        <DataGridTextColumn Header="조치 사항" Binding="{Binding ActionContent}" Width="Auto"/>
                        <DataGridTextColumn Header="발생 시간" Binding="{Binding DateTime}" Width="Auto"/>
                        <DataGridTextColumn Header="이상 해제 시간" Binding="{Binding ClearDateTime}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>


        </TabControl>

        
    </Grid>
</mah:MetroWindow>
